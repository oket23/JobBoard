{
  "Serilog": {
    "SeqServerUrl": "http://jobboard-seq:5341",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "identity-cluster",
        "Metadata": {
          "ResiliencePipeline": "default"
        },
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        }
      },
      "users-route": {
        "ClusterId": "identity-cluster",
        "Metadata": {
          "ResiliencePipeline": "default"
        },
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        }
      },
      "jobs-route": {
        "ClusterId": "recruitment-cluster",
        "Metadata": {
          "ResiliencePipeline": "default"
        },
        "Match": {
          "Path": "/api/v1/jobs/{**catch-all}"
        }
      },
      "applications-route": {
        "ClusterId": "recruitment-cluster",
        "Metadata": {
          "ResiliencePipeline": "default"
        },
        "Match": {
          "Path": "/api/v1/applications/{**catch-all}"
        }
      },
      "identity-health-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/identity/health"
        }
      },
      "recruitment-health-route": {
        "ClusterId": "recruitment-cluster",
        "Match": {
          "Path": "/api/v1/recruitment/health"
        }
      },
      "identity-swagger-route": {
        "ClusterId": "identity-cluster",
        "Metadata": {
          "ResiliencePipeline": "default"
        },
        "Match": {
          "Path": "/swagger/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/identity" }
        ]
      },
      "recruitment-swagger-route": {
        "ClusterId": "recruitment-cluster",
        "Metadata": {
          "ResiliencePipeline": "default"
        },
        "Match": {
          "Path": "/swagger/recruitment/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/recruitment" }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://jobboard-identity-api:8080"
          }
        }
      },
      "recruitment-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://jobboard-recruitment-api:8080"
          }
        }
      }
    }
  }
}