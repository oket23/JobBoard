# --- Environment ---
ASPNETCORE_ENVIRONMENT=Development
BUILD_CONFIGURATION=Release
IMAGE_TAG=latest
DOCKER_REGISTRY=

# --- PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_postgres_password_min_16_chars
POSTGRES_PORT=5432

# --- RabbitMQ ---
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_rabbitmq_password_min_16_chars
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# --- Redis ---
REDIS_PASSWORD=CHANGE_ME_redis_password_min_16_chars

# --- JWT Settings ---
JWT_SECRET_KEY=CHANGE_ME_use_openssl_rand_base64_64_to_generate

# --- Gateway ---
GATEWAY_PORT=5000
GATEWAY_HTTPS_PORT=5001

# --- Email Development (MailHog) ---
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# --- Email Production (Gmail приклад) ---
# Розкоментуйте та налаштуйте для production
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_ENABLE_SSL=true

# --- Email Production (SendGrid приклад) ---
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_ENABLE_SSL=true

# --- Seq (Centralized Logging) ---
SEQ_UI_PORT=5341
SEQ_INGESTION_PORT=5342
SEQ_API_KEY=CHANGE_ME_seq_api_key

# --- CORS (для Frontend) ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200